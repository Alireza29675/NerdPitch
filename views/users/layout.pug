doctype html
html
  head
    title= title + general.suffix
    link(rel="stylesheet", href="/stylesheets/vendor.css")
    link(rel="stylesheet", href="/stylesheets/user.css")
    block styles
  body
    nav
      li
        a(href='/')
          img(src="/images/nerdpitch.png", alt="NerdPitch Logo")
      if (!user)

        if (url !== 'login')
          li
            a(href='/login') Login

        if (url !== 'register')
          li
            a(href='/register') Register

      if (user)
        li
          a(href='/presentations') Presentations
        li
          a(href='/logout') Logout
        li.logged-in-user
          img.avatar(src=user.gravatar, alt=user.name + "'s Gravatar")
    div.container
      div.content
        block content
    script(src='/javascripts/vendor.bundle.js')
    block scripts